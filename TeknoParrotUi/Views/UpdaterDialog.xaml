<UserControl
    x:Class="TeknoParrotUi.Views.UpdaterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TeknoParrotUi.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TeknoParrotUi.Properties"
    d:DesignHeight="706"
    d:DesignWidth="800"
    FontFamily="pack://application:,,,/Resources/#Inter"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="{x:Static p:Resources.UpdaterNewUpdatesAvailable}"
            FontSize="28"
            TextWrapping="Wrap"
            Margin="0,0,0,15"
            VerticalAlignment="Center" />

        <Border 
            Grid.Row="1" 
            BorderBrush="#DDDDDD" 
            BorderThickness="0" 
            Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="updaterList" Margin="10" />
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="buttonCancel"
                Grid.Column="0"
                Margin="0,0,10,0"
                Height="40"
                MinWidth="150"
                MaxWidth="250"
                HorizontalAlignment="Right"
                Background="#B00020"
                BorderBrush="#B00020"
                Click="buttonCancel_Click"
                Content="{x:Static p:Resources.Cancel}"
                Foreground="#DDFFFFFF"
                IsCancel="True" />

            <Button
                x:Name="buttonBeginUpdate"
                Grid.Column="1"
                Margin="10,0,0,0"
                Height="40"
                MinWidth="150"
                MaxWidth="250"
                HorizontalAlignment="Left"
                Click="buttonBeginUpdate_Click"
                Content="{x:Static p:Resources.UpdaterUpdate}" />
        </Grid>
    </Grid>
</UserControl>