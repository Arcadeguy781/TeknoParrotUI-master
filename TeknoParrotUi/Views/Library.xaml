<UserControl x:Class="TeknoParrotUi.Views.Library"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TeknoParrotUi.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TeknoParrotUi.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:TeknoParrotUi.Properties"
             xmlns:uc="clr-namespace:TeknoParrotUi.UserControls"
             d:DesignHeight="706"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/Resources/#Inter"
             Loaded="UserControl_Loaded"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:IsLessThanConverter x:Key="IsLessThan" />
        <converters:MathConverter x:Key="MathConverter" />
    </UserControl.Resources>
    <Grid x:Name="MainLibraryGrid"
          Margin="0,0,0,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition x:Name="IconRow">
                <RowDefinition.Style>
                    <Style TargetType="RowDefinition">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=ActualHeight, ElementName=MainLibraryGrid, Converter={StaticResource IsLessThan}, ConverterParameter=500}"
                                         Value="True">
                                <Setter Property="Height"
                                        Value="10*" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=ActualHeight, ElementName=MainLibraryGrid, Converter={StaticResource IsLessThan}, ConverterParameter=500}"
                                         Value="False">
                                <Setter Property="Height"
                                        Value="240*" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </RowDefinition.Style>
            </RowDefinition>
            <RowDefinition Height="287*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="519*" />
            <ColumnDefinition Width="165" />
            <ColumnDefinition Width="165" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="0"
              Margin="4,4,4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{x:Static p:Resources.LibraryGenreLabel}"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="4,0,8,0"
                       FontSize="14" />
            <ComboBox x:Name="GenreBox"
          Grid.Column="1"
          Height="30"
          VerticalAlignment="Center"
          DisplayMemberPath="DisplayName"
          SelectionChanged="GenreBox_SelectionChanged" />
        </Grid>
        <Image Grid.Row="1"
               Grid.Column="1"
               Width="8"
               Height="8"
               Margin="135,124,19,108"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="Fant"
               Source="/TeknoParrotUi;component/Resources/blank_24bit.png" />
        <Image x:Name="gameIcon"
               Grid.Row="0"
               Grid.RowSpan="2"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Margin="10,10,10,12"
               RenderOptions.BitmapScalingMode="Fant"
               Source="/TeknoParrotUi;component/Resources/teknoparrot_by_pooterman-db9erxd.png">
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=ActualHeight, ElementName=MainLibraryGrid, Converter={StaticResource IsLessThan}, ConverterParameter=500}"
                                     Value="True">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        <ListBox x:Name="gameList"
                 Grid.Row="1"
                 Grid.RowSpan="10"
                 Margin="4"
                 BorderThickness="1"
                 SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style BasedOn="{StaticResource MaterialDesignListBoxItem}"
                       TargetType="ListBoxItem">
                    <Setter Property="Padding"
                            Value="7" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <StackPanel Grid.Row="2"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Margin="10,0">
            <ScrollViewer Margin="10,0">
                <TextBlock x:Name="gameInfoText"
                       Grid.Row="2"
                       Grid.Column="1"
                       Width="Auto"
                       HorizontalAlignment="Stretch"
                       FontSize="14"
                       Text="{x:Static p:Resources.LibraryNoInfo}"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            </ScrollViewer>
            <TextBlock Text="GPU Compatibility" 
                      FontSize="14" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,2,0,5"/>

            <uc:GpuCompatibilityDisplay x:Name="gpuCompatibilityDisplay" 
                                       HorizontalAlignment="Center"/>
        </StackPanel>
        <Button x:Name="playOnlineButton"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="Auto"
                Height="Auto"
                Margin="10,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="#FAFAFA"
                BorderBrush="#E0E0E0"
                Click="BtnPlayOnlineClick"
                Foreground="#212121">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                         VerticalAlignment="Center"
                                         Kind="Web"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryPlayOnline}" />
            </StackPanel>
        </Button>
        <Button x:Name="gameOnlineProfileButton"
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="Auto"
                Height="Auto"
                Margin="10,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnOnlineProfile">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                         VerticalAlignment="Center"
                                         Kind="AccountCircle"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryOnlineProfile}" />
            </StackPanel>
        </Button>
        <Button x:Name="gameLaunchButton"
                Grid.Row="6"
                Grid.Column="1"
                Width="Auto"
                Height="Auto"
                Margin="10,4,6,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                materialDesign:ShadowAssist.Darken="True"
                Click="BtnLaunchGame">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                         VerticalAlignment="Center"
                                         Kind="PlayCircle"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryPlay}" />
            </StackPanel>
        </Button>
        <Button x:Name="testMenuButton"
                Grid.Row="6"
                Grid.Column="2"
                Width="Auto"
                Height="Auto"
                Margin="0,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnLaunchTestMenu"
                Padding="2,0,0,0">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,0,0"
                                         VerticalAlignment="Center"
                                         Kind="TestTube"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryTestMode}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="7"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="Auto"
                Margin="10,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnGameSettings">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                         VerticalAlignment="Center"
                                         Kind="Settings"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryGameSettings}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="8"
                Grid.Column="1"
                Grid.ColumnSpan="2"

                Height="Auto"
                Margin="10,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnControllerSettings">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                         VerticalAlignment="Center"
                                         Kind="ControllerClassic"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryControllerSetup}" />
            </StackPanel>
        </Button>
        <Button x:Name="wikiButton"
           Grid.Row="9"
           Grid.Column="1"
           Grid.ColumnSpan="2"
           Height="Auto"
           Margin="10,4,10,2"
           HorizontalAlignment="Stretch"
           HorizontalContentAlignment="Left"
           Click="BtnMoreInfo">
            <StackPanel Width="Auto"
                   HorizontalAlignment="Left"
                   Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,8,0"
                                    VerticalAlignment="Center"
                                    Kind="Information"
                                    Height="24"
                                    Width="24" />
                <TextBlock FontSize="14"
                      VerticalAlignment="Center"
                      Text="{x:Static p:Resources.LibraryMoreInfo}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="10"
                Grid.RowSpan="1"
                Grid.Column="1"
                Width="Auto"
                Height="Auto"
                Margin="10,4,6,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnVerifyGame">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,2,0"
                                         VerticalAlignment="Center"
                                         Kind="FileCheck"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryVerifyGame}" />
            </StackPanel>
        </Button>
        <Button x:Name="delGame"
                Grid.Row="10"
                Grid.RowSpan="1"
                Grid.Column="2"
                Width="Auto"
                Height="Auto"
                Margin="0,4,10,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Click="BtnDeleteGame"
                IsEnabled="False">
            <StackPanel Width="Auto"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <materialDesign:PackIcon Margin="0,0,2,0"
                                         VerticalAlignment="Center"
                                         Kind="TrashCan"
                                         Height="24"
                                         Width="24" />
                <TextBlock FontSize="14"
                           VerticalAlignment="Center"
                           Text="{x:Static p:Resources.LibraryDeleteGame}" />
            </StackPanel>
        </Button>

    </Grid>
</UserControl>